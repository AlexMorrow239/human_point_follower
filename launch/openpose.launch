<launch>
  <!-- Launch arguments -->
  <arg name="enable_tracking" default="true" doc="Enable human tracking with head movement"/>

  <!-- Load parameters from yaml file -->
  <rosparam file="$(find human_point_follower)/config/params.yaml" command="load"/>

  <!-- OpenPose Bridge Node -->
  <node name="openpose_bridge"
        pkg="human_point_follower"
        type="openpose_bridge.py"
        output="screen">
  </node>

  <node if="$(arg enable_tracking)"
        name="human_tracker"
        pkg="human_point_follower"
        type="human_tracker.py"
        output="screen">
  </node>
</launch>